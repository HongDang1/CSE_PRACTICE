<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:padding="16dp"
    android:background="#4CAF50"> <!-- Green background -->

    <!-- First Row: Title -->
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi năm dương lịch"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="8dp" />
    </TableRow>

    <!-- Second Row: Năm dương lịch input -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:"
            android:textSize="18sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editNamDuongLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2013"
            android:inputType="number"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="4dp"/>
    </TableRow>

    <!-- Third Row: Chuyển đổi button -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi"
            android:background="#CCCCCC"
            android:textSize="18sp"
            android:textColor="#000000"/>
    </TableRow>

    <!-- Fourth Row: Năm âm lịch output -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quý Tỵ"
            android:textSize="18sp"
            android:textColor="#FF0000"
            android:padding="4dp"/>
    </TableRow>

</TableLayout>
