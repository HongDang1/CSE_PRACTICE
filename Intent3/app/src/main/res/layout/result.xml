<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xử lý Kết quả"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Nhận A -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận A:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/edtAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Nhận giá trị A"
        android:inputType="number" />

    <!-- Nhận B -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận B:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/edtBB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Nhận giá trị B"
        android:inputType="number" />

    <!-- Nút Trả về tổng và Trả về hiệu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnsendtong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRẢ VỀ TỔNG"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/btnsendhieu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRẢ VỀ HIỆU"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
